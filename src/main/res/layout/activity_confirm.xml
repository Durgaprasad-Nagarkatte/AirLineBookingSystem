<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.akshay.flightbooking.ConfirmActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:text="@string/final_message"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/flightname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="17dp"
        android:textSize="24sp"
        tools:text="TextView" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        tools:text="TextView"
        android:textSize="24sp"
        android:layout_below="@+id/flightname"
        android:layout_alignStart="@+id/flightname" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Return to Main Activity"
        android:layout_below="@+id/price"
        android:layout_alignParentStart="true"
        android:onClick="mainActivity"/>


</RelativeLayout>
